@model Class.Models.ContatoModel

@{
    ViewData["Title"] = "Editar Contato";
}

<div class="text-center">
    <h1 class="display-4">Editar Contato</h1>
</div>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Email</label>
        <input type="email" asp-for="Email" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Telefone</label>
        <input type="text" asp-for="Telefone" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
    <a class="btn btn-secondary" asp-action="Index">Voltar</a>
</form>
